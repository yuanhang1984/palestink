<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE xml>
<Config>
        <!--
                [SourceCode]
                rebuild: 0 不编译.
                         1 编译.
                command: 编译源码的命令.多个jar和java之间用";"分隔.
        -->
        <SourceCode rebuild = "1" command = "javac -encoding utf-8 -cp ${WEB_APP}/WEB-INF/lib/*;${WEB_APP}/WEB-INF/classes -d ${WEB_APP}/WEB-INF/ext/db/bin ${WEB_APP}/WEB-INF/ext/db/src/necessary/DbInstance.java" />
        <!--
                [DatabaseInformation]
                driver: 数据库驱动.
                url: 数据库库连接url.
        -->
        <DatabaseInformation driver = "com.mysql.jdbc.Driver" url = "jdbc:mysql://127.0.0.1:3306/lego?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=true" />
        <!--
                [DatabaseSecurity]
                name: 连接数据库的用户名.
                password: 连接数据库的密码.
        -->
        <DatabaseSecurity name = "root" password = "5695234" />
        <!--
                [DatabasePool]
                maxActiveConnection: 数据库连接池最大连接数.
        -->
        <DatabasePool maxActiveConnection = "200" />
</Config>
